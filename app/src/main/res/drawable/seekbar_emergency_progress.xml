<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="18dp"/>
            <corners android:radius="9dp"/>
            <gradient android:type="linear" android:angle="0"
                android:startColor="@color/alarm_background_start"
                android:endColor="@color/alarm_background_end"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="18dp"/>
                <corners android:radius="9dp"/>
                <solid android:color="@color/alarm_button_dismiss"/>
            </shape>
        </clip>
    </item>
</layer-list> 
 
 
 