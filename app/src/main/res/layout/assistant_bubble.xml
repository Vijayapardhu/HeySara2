<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent">

    <!-- Dimmed background with subtle blur covering full screen including system bars -->
    <View
        android:id="@+id/dim_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur_background" />

    <!-- The main bubble container for the swing animation -->
    <FrameLayout
        android:id="@+id/bubble_container"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="96dp">

        <!-- Glow is now inside the bubble container -->
        <ImageView
            android:id="@+id/glow_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glow_effect_bg"
            android:alpha="0.7" />

        <ImageView
            android:id="@+id/pulsing_circle_bg"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:src="@drawable/interactive_circle_bg" />

        <com.mvp.sarah.VoiceBarsView
            android:id="@+id/voice_lines"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>
</FrameLayout> 