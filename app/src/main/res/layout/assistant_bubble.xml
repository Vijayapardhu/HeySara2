<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_gravity="center">

    <!-- The new background glow -->
    <ImageView
        android:id="@+id/glow_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/glow_effect_bg"
        android:alpha="0.9" />

    <!-- The main bubble container for the swing animation -->
    <FrameLayout
        android:id="@+id/bubble_container"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pulsing_circle_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/interactive_circle_bg" />

        <com.mvp.sarah.VoiceBarsView
            android:id="@+id/voice_lines"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>
</FrameLayout> 