<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_orange_white"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Header Section with Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp">

            <!-- App Logo/Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher_foreground"
                android:background="@drawable/white_circle"
                android:padding="24dp"
                android:elevation="8dp"
                android:layout_marginBottom="16dp" />

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey Sara"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Personal Voice Assistant"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assistant Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Status Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/white_circle"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ready to listen"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                </LinearLayout>

                <!-- Feature List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✨ Voice Commands"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔒 App Lock &amp; Security"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 Call Management"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎵 Music Control"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌐 Web Search"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Main Action Button -->
            <Button
                android:id="@+id/btn_enable_accessibility"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="🎤 Activate Sara"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/orange_rounded_button"
                android:elevation="6dp"
                android:layout_marginBottom="16dp" />

            <!-- Secondary Action Button -->
            <Button
                android:id="@+id/btn_call_sara"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="📞 Call Sara Now"
                android:textSize="16sp"
                android:textColor="#FF6B35"
                android:background="@drawable/button_background"
                android:elevation="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Quick Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_settings"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="⚙️\nSettings"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/button_background"
                        android:layout_marginEnd="8dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_help"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="❓\nHelp"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/button_background"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btn_about"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="ℹ️\nAbout"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/button_background"
                        android:layout_marginStart="8dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tips Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 Pro Tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Say 'Hey Sara' to wake me up\n• I can help with calls, messages, and apps\n• Use voice commands for hands-free control\n• I work even when the screen is locked"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.3 • Made with ❤️ TeamSara"
            android:textSize="12sp"
            android:textColor="@color/orange"
            android:alpha="0.7"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
